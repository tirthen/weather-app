# ───────────────────────────────────────────────────────────────
# Weather App Environment Configuration Example
# Copy this file to .env and fill in your own values.
# ───────────────────────────────────────────────────────────────

# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=weather_app

# API Keys & URLs
OPENWEATHER_API_KEY=your_openweather_api_key
MAPBOX_API_KEY=your_mapbox_api_key

# Base URLs
MAPBOX_BASE_URL=https://api.mapbox.com/geocoding/v5/mapbox.places
OPENWEATHER_BASE_URL_V3=https://api.openweathermap.org/data/3.0

# Default OpenWeather parameters
DEFAULT_UNITS=metric
DEFAULT_EXCLUDE=minutely,alerts

# Security
SESSION_SECRET=your_session_secret
ADMIN_KEY=your_admin_key

# App settings
MAX_HISTORY_ITEMS=1000
CACHE_DURATION=3600

# Logging
LOG_LEVEL=info
LOG_FILE=logs/weather-app.log

# CORS
CORS_ORIGIN=*

# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Timeouts
API_TIMEOUT_MS=15000
DB_TIMEOUT_MS=10000

# File upload limits
MAX_FILE_SIZE=10mb
MAX_JSON_SIZE=10mb

# Security headers
HELMET_ENABLED=true

# Compression
COMPRESSION_ENABLED=true

# Debug flags
DEBUG_SQL=false
DEBUG_API=false
